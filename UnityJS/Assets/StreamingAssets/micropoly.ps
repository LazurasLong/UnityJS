/DrawMicropolyPropertyFrame {
  (windows/)
  $COLOR
  (frame.eps) AppendStrings AppendStrings
  gsave
    .5 .5 translate
    .59 .59 scale
    run
  grestore
} def


/DrawMicropolyStartMenuCorner {
  /x PropHeight 2 div def
  /y PropHeight GoLogoY sub def

  PropHeight 2 div 
  dup dup translate
  45 rotate
  neg dup translate

  gsave
    x y translate
    2.8 2.8 scale
    -27 -11 translate
    (startbutton.eps) run
  grestore

  /x PropHeight 2 div def
  /y PropHeight GoInstructionsY sub def

  GoFont GoFontSize UseFont
  $CAPTION1 x y CenterShow

  NewLine
  $CAPTION2 x y CenterShow
  NewLine
  $CAPTION3 x y CenterShow

} def


/DrawMicropolyReinstallWindowsCorner {
  1 32 div inches setlinewidth

  0 setgray
  0 JailBar moveto
  PropHeight JailBar sub JailBar lineto
  PropHeight JailBar sub PropHeight lineto
  stroke

  JailCaptionFont JailCaptionFontSize UseFont

  /x PropHeight JailBar sub 2 div def
%  /x PropHeight 2 div def
  /y JailJustY def
  $CAPTION1 x y CenterShow

  gsave
    PropHeight 0 translate
    90 rotate
%    /x PropHeight JailBar sub 2 div JailBar add def
    /x PropHeight 2 div def
    $CAPTION2 x y CenterShow
  grestore

  PropHeight 2 div 
  dup dup translate
  45 rotate
  neg dup translate

  gsave
    /x PropHeight 2 div def
    /y PropHeight JailPictureY sub def
    x y translate
    1 1 scale
    -27 -11 translate
    (startbutton.eps) run
  grestore

  /x PropHeight 2 div def
  /y PropHeight JailInY sub def

  JailFont JailFontSize UseFont
  $NAME1 x y CenterShow

  /y PropHeight JailJailY sub def

  $NAME2 x y CenterShow

} def


